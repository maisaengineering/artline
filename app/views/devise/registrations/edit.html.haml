%section#main-content
  %section.wrapper
    %h2
      Edit #{resource_name.to_s.humanize}
    %section.panel
      %div.panel-body.ptop35
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          %div.col-sm-12
            %div.row.mbtm15
              %div.col-sm-3
                -#= f.label :fname, "First Name"
                -#%br/
                = f.text_field :fname, autofocus: true,class: "form-control",placeholder: "First Name"
              %div.col-sm-3
                -#= f.label :lname, "Last Name"
                -#%br/
                = f.text_field :lname,class: "form-control",placeholder: "Last Name"
            %div.row.mbtm15
              %div.col-sm-3
                -#= f.label :phone
                -#%br/
                = f.telephone_field :phone,class: "form-control",placeholder: "Phone"
              %div.col-sm-3
                -#= f.label :email
                -#%br/
                = f.email_field :email,class: "form-control",placeholder: "Email"
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %div
                Currently waiting confirmation for: #{resource.unconfirmed_email}
            %div.row.mbtm15
              %div.col-sm-3
                -#= f.label :password
                %i (leave blank if you don't want to change it)
                -#%br/
                = f.password_field :password, autocomplete: "off",class: "form-control",placeholder: "Password"
              %div.col-sm-3
                %br
                %br
                -#= f.label :password_confirmation
                = f.password_field :password_confirmation, autocomplete: "off",class: "form-control",placeholder: "Password Confirmation"
            %div.row.mbtm15
              %div.col-sm-3
                -#= f.label :current_password
                %i (we need your current password to confirm your changes)
                -#%br/
                = f.password_field :current_password, autocomplete: "off",class: "form-control",placeholder: "Current Password"
          .actions.col-sm-6
            %br
            = f.submit "Update",class: "btn btn-primary"
