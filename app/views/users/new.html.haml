%section#main-content
  %section.wrapper
    %h2 Create Project Manager
    %section.panel
      %div.panel-body.ptop35
        = form_for(@user, url: users_path) do |f|
          - if @user.errors.present?
            #error_explanation
              %h2 #{@user.errors.count} error prohibited this user from being saved:
              %ul
                - @user.errors.full_messages.each do |k|
                  %li
                    = "#{k}"
          -# byebug
          %div.col-md-12
            %div.row.mbtm15
              %div.col-sm-3
                -#= f.label :fname, "First Name"
                -#%br/
                = f.text_field :fname, autofocus: true,class: "form-control",placeholder: "First Name"
              %div.col-sm-3
                -#= f.label :lname, "Last Name"
                -#%br/
                = f.text_field :lname, autofocus: true,class: "form-control",placeholder: "Last Name"
            %div.row.mbtm15
              %div.col-sm-3
                -#= f.label :phone
                -#%br/
                = f.telephone_field :phone,class: "form-control",placeholder: "Phone"
              %div.col-sm-3
                -#= f.label :email
                -#%br/
                = f.email_field :email, autofocus: true,class: "form-control",placeholder: "Email"
            %div.row.mbtm15
              %div.col-sm-3
                -#= f.label :password
                - if @validatable
                  %em
                    (#{@minimum_password_length} characters minimum)
                -#%br/
                = f.password_field :password, autocomplete: "off",class: "form-control",placeholder: "Password"
              %div.col-sm-3
                -#= f.label :password_confirmation
                -#%br/
                = f.password_field :password_confirmation, autocomplete: "off",class: "form-control",placeholder: "Password Confirmation"
          %div.col-md-12
            .actions
              = f.submit "Create",class: "btn btn-primary"
