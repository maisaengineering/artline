.project_item
  %hr
  .row
    .col-md-12
      %spna.project_details
        Name :
      %span
        = item.artwork_type
      .btn.btn-danger.float_right{id: item.id,onclick: "delete_item(this)"}
        delete
  .row
    .col-md-3
      %spna.project_details
        Tag :
      %span
        = item.tag
    .col-md-2
      %spna.project_details
        Quantity :
      %span
        = item.quantity
  .row
    .col-md-3
      %spna.project_details
        Title :
      %span
        = item.product.title
    .col-md-3
      %spna.project_details
        Width :
      %span
        = item.product.width
    .col-md-3
      %spna.project_details
        Height :
      %span
        = item.product.height
  %br
  .row
    .col-md-3
      %spna.project_details
        Publisher :
      %span
        = item.product.supplier.name
    .col-md-3
      %spna.project_details
        Attention :
      %span
        = item.product.supplier.attention.join(",")
  .row
    .col-md-6
      %spna.project_details
        address :
      %span
        = item.product.supplier.address
      %br
      %span.pad_left_66
        = "#{item.product.supplier.city}, #{item.product.supplier.state}."
      %div.pad_left_66
        = item.product.supplier.zip
      %div
        %spna.project_details
          Phone :
        %span
          = item.product.supplier.phone
      %div
        %spna.project_details
          Email :
        %span
          = item.product.supplier.email
  %br
  .row
    .col-md-6
      %div
        %spna.project_details
          Image Title:
        %span
          = item.product.image.title
      %div
        %span
        = image_tag(item.product.image.source.url, class: "product-img") if item.product.image.source?
      %div
        %spna.project_details
          Artist :
        %span
          = item.product.image.artist
      %div
        %spna.project_details
          Width :
        %span
          = item.product.image.width
        %spna.project_details
          Height :
        %span
          = item.product.image.height
  .row
    .col-md-3
      %spna.project_details
        Matting :
      %span
        = item.product.matting
    .col-md-3
      %spna.project_details
        Matting size :
      %span
        = item.product.mat_size
    .col-md-12
      %spna.project_details
        Matting Special Instructions :
      %div
        = item.product.mat_special_instructions
  .row
    .col-md-3
      %spna.project_details
        Glazing :
      %span
        = item.product.glazing
    .col-md-12
      %spna.project_details
        Glazing Special Instructions :
      %div
        = item.product.glazing_special_instructions
  .row
    .col-md-3
      %spna.project_details
        Glass Width :
      %span
        = item.product.glass_width
    .col-md-3
      %spna.project_details
        Glass Height :
      %span
        = item.product.glass_width
    .col-md-3
      %spna.project_details
        Glass United Inches :
      %span
        = item.product.glass_united_inches
  %br
  .row
    .col-md-3
      %spna.project_details
        Moulding Company :
      %span
        = item.product.moulding_company.name
    .col-md-3
      %spna.project_details
        Attention :
      %span
        = item.product.moulding_company.attention.join(",")
  .row
    .col-md-6
      %spna.project_details
        address :
      %span
        = item.product.moulding_company.address
      %br
      %span.pad_left_66
        = "#{item.product.moulding_company.city}, #{item.product.moulding_company.state}."
      %div.pad_left_66
        = item.product.moulding_company.zip
      %div
        %spna.project_details
          Phone :
        %span
          = item.product.moulding_company.phone
      %div
        %spna.project_details
          Email :
        %span
          = item.product.moulding_company.email
  %br
  .row
    .col-md-6
      %div
        %spna.project_details
          Frame :
      %div
        %span
        = image_tag(item.product.frame.source.url, class: "product-img") if item.product.frame.source?
      %div
        %spna.project_details
          Size :
        %span
          = item.product.frame.size
      %div
        %spna.project_details
          Finish :
        %span
          = item.product.frame.finish
      - if item.product.frame.category?
        %div
          %spna.project_details
            Category :
          %span
            = item.product.frame.category
  %br
  .row
    .col-md-3
      %spna.project_details
        Category :
      %span
        = item.product.category
    .col-md-3
      %spna.project_details
        Frame Size :
      %span
        = item.product.frame_size
  .row
    .col-md-3
      %spna.project_details
        Overall Width :
      %span
        = item.product.overall_width
    .col-md-3
      %spna.project_details
        Overall Height :
      %span
        = item.product.overall_height
  .row
    .col-md-12
      %spna.project_details
        Special Instructions :
      %div
        = item.special_instructions