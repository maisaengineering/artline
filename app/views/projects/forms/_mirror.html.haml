  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][overall_width]", nil, class: "form-control", placeholder: "Overall Width", required: true)
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][overall_height]", nil, class: "form-control", placeholder: "Overall Height", required: true)
.row
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][united_inches]", nil, class: "form-control", placeholder: "United Inches", required: true)
.row
  .col-md-3.mbtm15.txt_area
    = text_area_tag("project[item_list][][special_instructions]", nil, class: "form-control", placeholder: "Special Instructions", required: true)
.row
  .col-md-3.mbtm15
    = label_tag(:tot_cost, "Total Cost:")