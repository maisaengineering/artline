    = number_field_tag("project[item_list][][product][new][bevel_size]", 1, class: "form-control", placeholder: "Bevel Size",min: 0, required: true )
.row
  .col-md-3.mbtm15.txt_area
    = text_area_tag("project[item_list][][product][new][bevel_special_instructions]", nil, class: "form-control", placeholder: "Bevel Special Instructions", required: true)
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][new][glazing]", options_for_select(["Glass", "Plexie"]),prompt: "Glazing" , class: "form-control", required: true )
.row
  .col-md-3.mbtm15.txt_area
    = text_area_tag("project[item_list][][product][new][glazing_special_instructions]", nil, class: "form-control", placeholder: "Glazing Special Instructions", required: true)
.row
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][glass_width]", nil, class: "form-control", placeholder: "Glass Width", required: true)
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][glass_height]", nil, class: "form-control", placeholder: "Glass Height", required: true)
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][existing][moulding_company_id]", options_for_select(MouldingCompany.all.map{|m|[m.name, m.id]}.push('add')),prompt: "Moulding Company" , class: "form-control mouldingcompany_no",id: "moulding_company", onchange:"new_item(this)", data:{name: 'MouldingCompany'}, required: true)
.mouldingcompany
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][existing][frame_id]", options_for_select(Frame.all.map{|f| [f["finish"],f["id"]]}.push('add')),prompt: "Frame Number" , class: "form-control frame_no",id: "frame", onchange:"new_item(this)", data:{name: 'Frame'}, required: true )
.frame
.row
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][frame_category]", nil, class: "form-control", placeholder: "Category", required: true)
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][frame_size]", nil, class: "form-control", placeholder: "Frame Size", required: true)
