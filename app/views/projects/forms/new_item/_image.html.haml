.row
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][image][title]", nil, class: "form-control", placeholder: "Title", required: true)
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][image][artist]", nil, class: "form-control", placeholder: "Artist", required: true)
.row
  .col-md-3.mbtm15
    = number_field_tag("project[item_list][][product][new][image][width]", 1, class: "form-control", placeholder: "Image Width", required: true, onchange:"image_width(this)")
  .col-md-3.mbtm15
    = number_field_tag("project[item_list][][product][new][image][height]", 1, class: "form-control", placeholder: "Image Height", required: true, onchange:"image_height(this)")
.row
  .fileUpload.btn.btn-primary.mbtm15
    %span Upload image
    = file_field_tag("project[item_list][][product][new][image][source]", class: "upload")
