= hidden_field_tag "project[item_list][][type]", "Artwork"
= hidden_field_tag "project[item_list][][artwork_type]", "FramedArt"
.row
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][tag]", nil, class: "form-control", placeholder: "Tag", required: true)
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][quantity]", nil, class: "form-control", placeholder: "Quantity", required: true)
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][existing][supplier_id]", options_for_select(Companies::Supplier.all.map{|s|[s.name, s.id]}.push('add')),prompt: "Publisher" , class: "form-control supplier_no", onchange:"new_item(this)", data:{name: 'Supplier'}, required: true)
.supplier
.replaceable
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][existing][image_id]", options_for_select(Image.pluck(:title,:id).push('add')),prompt: "Image" , class: "form-control" , onchange:"new_item(this)", data:{name: 'Image'}, required: true)
.image
.replaceable
  .row
    .col-md-3.mbtm15
      Image Title:
      = text_field_tag("project[item_list][][product][new][title]", nil, class: "form-control", placeholder: "Title", required: true)
  .row
    .col-md-3.mbtm15
      Image Width:
      = number_field_tag("project[item_list][][product][new][width]", 1, class: "form-control", placeholder: "Image Width", required: true, onchange:"image_width(this)")
    .col-md-3.mbtm15
      Image Height:
      = number_field_tag("project[item_list][][product][new][height]", 1, class: "form-control", placeholder: "Image Height", required: true, onchange:"image_height(this)")
.row
  .col-md-3.mbtm15
    Matting:
    = select_tag("project[item_list][][product][new][matting]", options_for_select(["Single", "Double","None","add"]), class: "form-control matting_no", onchange:"new_field(this)",data:{name: 'Matting'}, required: true)
  .col-md-3.mbtm15
    Mat Size:
    = number_field_tag("project[item_list][][product][new][mat_size]", 1, class: "form-control", placeholder: "Mat Size",min: 0, required: true, onchange:"mat_size(this)")
.row
  .col-md-3
    .matting
.row
  .col-md-3.mbtm15.txt_area
    = text_area_tag("project[item_list][][product][new][mat_special_instructions]", nil, class: "form-control", placeholder: "Mat Special Instructions")
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][new][glazing]", options_for_select(["Glass", "Plexie","None"]),prompt: "Glazing" , class: "form-control" , required: true)
.row
  .col-md-3.mbtm15.txt_area
    = text_area_tag("project[item_list][][product][new][glazing_special_instructions]", nil, class: "form-control", placeholder: "Glazing Special Instructions")
.row
  .col-md-3.mbtm15
    Glass Width:
    = number_field_tag("project[item_list][][product][new][glass_width]", 2, class: "form-control", placeholder: "Glass Width", required: true, onchange:"glass_width_artwork(this)")
  .col-md-3.mbtm15
    Glass Height:
    = number_field_tag("project[item_list][][product][new][glass_height]", 2, class: "form-control", placeholder: "Glass Height", required: true, onchange:"glass_height_artwork(this)")
.row
  .col-md-3.mbtm15
    Glass United Inches:
    = number_field_tag("project[item_list][][product][new][glass_united_inches]", 4, class: "form-control", placeholder: "Glass United Inches", disabled:true)
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][existing][moulding_company_id]", options_for_select(MouldingCompany.all.map{|m|[m.name, m.id]}.push('add')),prompt: "Moulding Company" , class: "form-control mouldingcompany_no", onchange:"new_item(this)", data:{name: 'MouldingCompany'}, required: true)
.mouldingcompany
.replaceable
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][existing][frame_id]", options_for_select(Frame.all.map{|f| [f["finish"],f["id"]]}.push('add')),prompt: "Frame" , class: "form-control frame_no", onchange:"new_item(this)", data:{name: 'Frame'}, required: true )
.frame
.row.replaceable
  .col-md-3.mbtm15
    Frame Category:
    = text_field_tag("project[item_list][][product][new][category]", nil, class: "form-control", placeholder: "Category", required: true)
  .col-md-3.mbtm15
    Frame size
    = number_field_tag("project[item_list][][product][new][frame_size]", 1, class: "form-control", placeholder: "Frame Size", required: true, onchange:"frame_size(this)")
.row
  .col-md-3.mbtm15
    Overall Width:
    = number_field_tag("project[item_list][][product][new][overall_width]", 4, class: "form-control", placeholder: "Overall Width", required: true, onchange:"overall_width(this)")
  .col-md-3.mbtm15
    Overall Height:
    = number_field_tag("project[item_list][][product][new][overall_height]", 4, class: "form-control", placeholder: "Overall Height", required: true, onchange:"overall_height(this)")
.row
  .col-md-3.mbtm15.txt_area
    = text_area_tag("project[item_list][][special_instructions]", nil, class: "form-control", placeholder: "Special Instructions")
