    = text_field_tag("project[item_list][][product][new][width]", nil, class: "form-control", placeholder: "Image Width", required: true)
  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][height]", nil, class: "form-control", placeholder: "Image Height", required: true)
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][new][matting]", options_for_select(["Single", "Double","None","add"]),prompt: "Matting" , class: "form-control matting_no", onchange:"new_field(this)",data:{name: 'Matting'}, required: true)
  .col-md-3.mbtm15
    = number_field_tag("project[item_list][][product][new][mat_size]", 3, class: "form-control", placeholder: "Mat Size",min: 0, required: true )
