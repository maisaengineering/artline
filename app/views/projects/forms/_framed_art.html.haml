  .col-md-3.mbtm15
    = text_field_tag("project[item_list][][product][new][glass_united_inches]", nil, class: "form-control", placeholder: "Glass United Inches", required: true)
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][existing][moulding_company_id]", options_for_select(MouldingCompany.all.map{|m|[m.name, m.id]}.push('add')),prompt: "Moulding Company" , class: "form-control mouldingcompany_no", onchange:"new_item(this)", data:{name: 'MouldingCompany'}, required: true)
.mouldingcompany
.row
  .col-md-3.mbtm15
    = select_tag("project[item_list][][product][existing][frame_id]", options_for_select(Frame.all.map{|f| [f["finish"],f["id"]]}.push('add')),prompt: "Frame" , class: "form-control frame_no", onchange:"new_item(this)", data:{name: 'Frame'}, required: true )
