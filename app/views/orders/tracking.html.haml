%section.wrapper
  %h1 Artline Order
  %section.panel
    .panel-body.ptop35

      %table.table.table-bordered
        %thead
          %tr
            %th Product details
            %th Quantity
            %th Supplier item number
            %th Each Cost
            %th Cost

        %tbody
          - @project.orders.each do |order, index|

            - order.items.each do |item |
              %tr
                %td
                  .row
                    .col-md-12
                      %div
                        %span.project_details
                          Name :
                        = item["type"]
                        &nbsp; &nbsp; &nbsp;

                      .row
                        .col-md-4{style: "padding-right: 0px;"}
                          - unless item.product.source.file.blank?
                            = image_tag(item.product.source.url, class: "product-img")
                          = "Size: #{item.product.size}"
                        .col-md-8
                          = item.product.description
                      - item.product.addons.each do |addon|
                        .project_details
                          #{addon}:
                        - addon = item.product.instance_eval(addon)
                        .row
                          .col-md-3{style: "padding-right: 0px;"}
                            - unless addon.source.file.blank?
                              = image_tag(addon.source.url, class: "product-img")
                          .col-md-9
                            = addon.details
                %td
                  = item["quantity"]
                %td
                  = item["number"]
                - each_price = Price.where(project_id: @project.id,product_id: item.product.id).first.supplier_cost
                %td
                  = each_price
                %td
                  = each_price * item["quantity"].to_i
            %tr
              %td{colspan: 2}
                %div
                  %b
                    Expected shipment date:
                  = order.shipment_date? ? order.shipment_date : "Not yet enterd"
                %b
                  Shipment Details :
                %div
                  = order.shipment_details? ? order.shipment_details : "Not yet entered"