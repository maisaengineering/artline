!!!
%html
  %head
    %title Artline
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %div.container
      - if user_signed_in?

        %ul.nav.navbar-nav.navbar-right

          %li
            = link_to "Create Project Manager", new_user_registration_path, method: :get
          %li
            = link_to "New Quote", new_projects_path
          %li
            = link_to "Edit Quote", edit_projects_path
          %li
            = link_to "Process Order", "#"
          %li
            = link_to "Check Order Status", "#"
          %li
            = link_to "Add/Edit Item", "#"
          %li
            = link_to "Search Item", "#"

          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
              %i.glyphicon.glyphicon-user
              = current_user.email
              %span.caret
            %ul#g-account-menu.dropdown-menu{:role => "menu"}
              %li
                = link_to "edit", edit_user_registration_path(current_user)
              %li
                = link_to "Sign out", destroy_user_session_path,method: :delete

      = yield