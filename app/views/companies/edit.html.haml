%section#main-content
  %section.wrapper
    %h2 Edit Client/Supplier
    %section.panel
      %div.panel-body.ptop35
        = form_tag company_path(@company.id), method: :patch do
          .row
            .col-md-3.mbtm15
              = select_tag "company[_type]", options_for_select([["Client","Companies::Client"],["Supplier","Companies::Supplier"]],@company._type),prompt: "Select Client/Supplier", class: "form-control", required: true
          .row
            .col-md-3.mbtm15
              Company Name
              = text_field_tag("company[name]", @company.name, class: "form-control", required: true)
            - if @company.attention.kind_of?(Array)
              .col-md-3.mbtm15{style: "width: 30%;"}
                Attention
                - @company.attention.each_with_index do |val,ind|
                  .row
                    .col-md-12#field
                      = text_field_tag("company[attention][]", val, class: "attention")
                      - if ind == 0
                        %button#b1.btn#add-more{:type => "button"} +
            - else
              .col-md-3.mbtm15{style: "width: 30%;"}
                .row
                  .col-md-12#field
                    = text_field_tag("company[attention][]", @company.attention, class: "attention", placeholder: "Attention")
                    %button#b1.btn#add-more{:type => "button"} +
          .row
            .col-md-3.mbtm15
              Address
              = text_field_tag("company[address]", @company.address, class: "form-control", required: true)
            .col-md-3.mbtm15
              City
              = text_field_tag("company[city]", @company.city, class: "form-control", required: true)
          .row
            .col-md-3.mbtm15
              State
              = text_field_tag("company[state]", @company.state, class: "form-control", required: true)
            .col-md-3.mbtm15
              Zip
              = text_field_tag("company[zip]", @company.zip, class: "form-control", required: true)
          .row
            .col-md-3.mbtm15
              Phone
              = phone_field_tag("company[phone]", @company.phone, class: "form-control", required: true)
            .col-md-3.mbtm15
              Email
              = email_field_tag("company[email]", @company.email, class: "form-control", required: true)
          .row
            .col-md-12
              .actions
                = submit_tag nil,class: "btn btn-primary"